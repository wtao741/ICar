<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_200_dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:background="@drawable/dialog_bgm" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip" 
        android:text="确认删除?"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/home_title_bgm"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    
    <TextView
        android:layout_width="@dimen/dimen_320_dip"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="@color/border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/home_text_color" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/home_text_color" />
    </LinearLayout>
</LinearLayout>
