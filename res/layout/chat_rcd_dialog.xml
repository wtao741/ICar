<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dip"
    android:layout_height="130dip" >

    <LinearLayout
        android:id="@+id/rcd_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/rcd_dialog_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/rcd_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/rcd_cancel"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/volume_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/voice_rcd_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/voice_rcd_mac" />

                <ImageView
                    android:id="@+id/voice_rcd_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:src="@drawable/amp1" />
            </LinearLayout>

            <TextView
                android:id="@+id/rec_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#000000"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/rcd_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/move_up_to_cancel" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rcd_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/voice_short_notify"
        android:visibility="gone" />

</FrameLayout>