<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white" >
    
    <RelativeLayout  android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_104_dip"
    android:background="@drawable/white">
    
    <ImageView 
        android:id="@+id/search_result_iv"
        android:layout_width="@dimen/dimen_96_dip"
        android:layout_height="@dimen/dimen_64_dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_24_dip"
        android:src="@drawable/zhiyan"
        />
    
    <TextView
        android:id="@+id/search_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/search_result_iv"
        android:layout_marginLeft="@dimen/dimen_16_dip"
        android:text="hello"
        android:textColor="@color/search_text_color"
        android:textSize="12sp"
        />
    
     <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_20_dip"
       android:layout_centerVertical="true"
        android:src="@drawable/arrow_search"
        />
     </RelativeLayout>
</RelativeLayout>
