<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgm"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_142_dip"
        android:layout_marginTop="@dimen/dimen_23_dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:background="@color/border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_71_dip" >

            <ImageView
                android:id="@+id/user_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_71_dip"
                android:src="@drawable/login_name" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_27_dip"
                android:layout_toRightOf="@id/user_tips"
                android:background="@null"
                android:hint="@string/login_user_tips"
                android:inputType="number"
                android:maxLength="13"
                android:textColorHint="@color/need_666"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:background="@color/border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_71_dip" >

            <ImageView
                android:id="@+id/auth_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_71_dip"
                android:src="@drawable/login_auth" />

            <EditText
                android:id="@+id/user_auth"
                android:layout_width="@dimen/dimen_150_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_27_dip"
                android:layout_toRightOf="@id/auth_tips"
                android:background="@null"
                android:hint="@string/register_submit_tips"
                android:inputType="number"
                android:maxLength="4"
                android:textColorHint="@color/need_666"
                android:textSize="15sp" />

            <Button
                android:id="@+id/register_auth"
                android:layout_width="@dimen/dimen_116_dip"
                android:layout_height="@dimen/dimen_46_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_33_dip"
                android:background="@drawable/register_auth_selector"
                android:text="@string/register_submit_tips"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="@color/border" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_71_dip"
        android:layout_marginTop="@dimen/dimen_32_dip"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:layout_alignParentTop="true"
            android:background="@color/border" />

        <ImageView
            android:id="@+id/password_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_71_dip"
            android:src="@drawable/login_password" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_27_dip"
            android:layout_toRightOf="@id/password_tips"
            android:background="@null"
            android:hint="@string/register_pass_tips"
            android:inputType="textPassword"
            android:textColorHint="@color/need_666"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:layout_alignParentBottom="true"
            android:background="@color/border" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52_dip"
        android:layout_marginLeft="@dimen/dimen_33_dip"
        android:layout_marginRight="@dimen/dimen_33_dip"
        android:layout_marginTop="@dimen/dimen_33_dip"
        android:background="@drawable/login_submit_selector"
        android:gravity="center"
        android:text="@string/login_register"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_27_dip" >

        <TextView
            android:id="@+id/login_other_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/home_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_other_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_11_dip"
            android:layout_toLeftOf="@id/login_other_tips1"
            android:text="@string/register_other_tips"
            android:textColor="@color/need_666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_other_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_toRightOf="@id/login_other_tips1"
            android:text="@string/register_other_tips2"
            android:textColor="@color/home_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>