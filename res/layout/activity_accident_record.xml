<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgm"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/date_tips"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/date"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/date_tips" >

            <ImageView
                android:id="@+id/date_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/date_select" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/date_select"
                android:background="@drawable/white_shape"
                android:gravity="center"
                android:hint="2015-02-15 32:54"
                android:textColor="@color/home_title_bgm"
                android:textColorHint="@color/need_666"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/address_tips"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/address"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/address_tips"
            android:background="@drawable/white_shape_conner" >

            <ImageView
                android:id="@+id/address_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_9_dip"
                android:src="@drawable/address_location" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/address_location"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/location_tips"
                android:paddingLeft="@dimen/dimen_12_dip"
                android:textColor="@color/home_title_bgm"
                android:textColorHint="@color/need_666"
                android:textSize="11sp" 
                android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/people_tips1"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/people"
            android:textColor="@color/home_title_bgm"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/people1"
            android:layout_width="@dimen/dimen_106_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/people_tips1"
            android:background="@drawable/white_shape_conner"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mobile_tips1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12_dip"
            android:layout_toRightOf="@id/people1"
            android:text="@string/mobile"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mobile1"
            android:layout_width="@dimen/dimen_146_dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_shape_conner"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/people_tips2"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/people"
            android:textColor="@color/home_title_bgm"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/people2"
            android:layout_width="@dimen/dimen_106_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/people_tips2"
            android:background="@drawable/white_shape_conner"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mobile_tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12_dip"
            android:layout_toRightOf="@id/people2"
            android:text="@string/mobile"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mobile2"
            android:layout_width="@dimen/dimen_146_dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_shape_conner"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/people_tips3"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/people"
            android:textColor="@color/home_title_bgm"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/people3"
            android:layout_width="@dimen/dimen_106_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/people_tips3"
            android:background="@drawable/white_shape_conner"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mobile_tips3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12_dip"
            android:layout_toRightOf="@id/people3"
            android:text="@string/mobile"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mobile3"
            android:layout_width="@dimen/dimen_146_dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_shape_conner"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_22_dip"
        android:layout_marginRight="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/accident_des"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/accident_car"
            android:textColor="@color/home_title_bgm"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_21_dip"
            android:layout_toRightOf="@id/accident_des"
            android:background="@drawable/white_shape_conner" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_9_dip"
                android:src="@drawable/arrow_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/accident_des"
                android:paddingLeft="@dimen/dimen_12_dip"
                android:textColor="@color/home_title_bgm"
                android:textColorHint="@color/need_666"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/real_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:layout_marginLeft="@dimen/dimen_38_dip"
        android:layout_marginTop="@dimen/dimen_23_dip" >

        <TextView
            android:id="@+id/accident_photo"
            android:layout_width="@dimen/dimen_34_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text="@string/accident_photo"
            android:textColor="@color/home_title_bgm"
            android:textSize="12sp" />

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_1_dip"
            android:layout_toRightOf="@id/accident_photo">
        
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_right"
            android:layout_marginLeft="@dimen/dimen_4_dip"
            android:src="@drawable/to_left" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_22_dip"
            android:layout_centerVertical="true"
            android:src="@drawable/to_right" />

         <com.icar.view.HorizontalListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_marginRight="@dimen/dimen_7_dip"
            android:layout_toRightOf="@id/iv_left"
            android:layout_toLeftOf="@id/iv_right"
            android:background="@color/white" >
        </com.icar.view.HorizontalListView>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/accident_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_marginLeft="@dimen/dimen_42_dip"
        android:layout_marginRight="@dimen/dimen_42_dip"
        android:layout_marginTop="@dimen/dimen_23_dip"
        android:background="@drawable/add_oil_selector"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>