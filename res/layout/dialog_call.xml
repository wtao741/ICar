<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_320_dip"
    android:layout_height="@dimen/dimen_118_dip"
    android:background="@drawable/dialog_bgm"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_call_title"
        android:layout_width="@dimen/dimen_320_dip"
        android:layout_height="@dimen/dimen_68_dip"
        android:gravity="center"
        android:text="400-886-6688"
        android:textColor="@color/home_title_bgm"
        android:textSize="14sp" />

    <TextView
        android:layout_width="@dimen/dimen_320_dip"
        android:layout_height="0.5dp"
        android:background="@color/border" />

    <LinearLayout
        android:layout_width="@dimen/dimen_320_dip"
        android:layout_height="@dimen/dimen_50_dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/home_text_color"
            android:background="@drawable/white_selector" 
            android:textSize="15sp"/>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/border" />

        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/call"
            android:textColor="@color/home_text_color" 
            android:background="@drawable/white_selector"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>