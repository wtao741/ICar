<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_64_dip"
    android:background="@color/home_title_bgm" >

    <LinearLayout
        android:id="@+id/head_left"
        android:layout_width="@dimen/dimen_50_dip"
        android:layout_height="match_parent"
        android:background="@drawable/head_left_selector"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="nihao"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/head_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:background="@null"
        android:text="nihao"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/head_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/head_right"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:src="@drawable/my_collect" 
        android:visibility="gone"/>
    
  
</RelativeLayout>